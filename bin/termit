#!/usr/bin/env ruby
require 'rubygems'

# FIX https://github.com/rubygems/rubygems/issues/1420
class Gem::Specification
  def this; self; end
end

$LOAD_PATH.unshift(File.dirname(__FILE__) + '/../lib') unless $LOAD_PATH.include?(File.dirname(__FILE__) + '/../lib')

require 'termit'

begin
  options = Termit::UserInputParser.new(ARGV).options
  Termit::Main.new(options).translate
rescue Interrupt # user pressed CTRL+C
  STDERR.puts "\nTermit: exiting due to user request"
  exit 130
end


